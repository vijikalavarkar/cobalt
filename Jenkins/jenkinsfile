pipeline{
    agent{
        label 'testers'
    }
    stages{
        stage('Server Details'){
            steps{
                sh '''
                    uname -a
                '''
            }
        }
        stage('Memory'){
            steps{
                sh '''
                    free -h
                '''
            }
        }
        stage('Disk Utilization'){
            steps{
                sh '''
                    df -kh
                '''
            }
        }
    }
}
